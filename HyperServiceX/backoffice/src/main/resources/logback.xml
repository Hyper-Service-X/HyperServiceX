<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <springProperty scope="context" name="NODE_NAME" source="NODE.NAME"/>
    <property name="PROJECT_NAME" value="XB" />
    <!-- Send debug messages to System.out -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- By default, encoders are assigned the type ch.qos.logback.classic.encoder.PatternLayoutEncoder -->
        <encoder>
            <pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] ${PROJECT_NAME}_${NODE_NAME} %-5level %logger{5} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hyperServiceX/app/logs/bo/app.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] ${PROJECT_NAME}_${NODE_NAME} %-5level %logger{36} - %msg%n</Pattern>
        </encoder>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/hyperServiceX/app/logs/bo/app.%d{yyyy-MM-dd}.log.zip</FileNamePattern>
            <maxHistory>7</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="SETTLEMENT_CUT_OVER_LOG_APPENDER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>/hyperServiceX/app/logs/processor/slog.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{yyyy-MM-dd_HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</Pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <FileNamePattern>/hyperServiceX/app/logs/processor/tlog.%d{yyyy-MM-dd_HH}.log.zip</FileNamePattern>
            <maxHistory>200</maxHistory>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <logger name="org.apache.kafka" level="ERROR"/>
    <logger name="org.apache.kafka.common.metrics" level="INFO"/>
    <logger name="SETTLEMENT_PROCESS_LOGGER" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="SETTLEMENT_CUT_OVER_LOG_APPENDER"/>
    </logger>
    <!-- By default, the level of the root level is set to DEBUG -->
    <root level="INFO">
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="FILE"/>
    </root>
</configuration>
